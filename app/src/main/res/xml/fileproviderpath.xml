<?xml version="1.0" encoding="utf-8"?>
<paths xmlns:android="http://schemas.android.com/apk/res/android">

    <!--  file path => content uri -->
    <root-path name="root" path="."/>
    <files-path
        name="files"
        path="."/>

    <!--
        cachedir/targetFile -> content://cache/targetFile
        content://cache/targetFile -> cache-path/targetFile (即getCacheDir/targetFile)
    -->
    <cache-path
        name="cache"
        path="."/>

    <!--  SD卡目录  -->
    <external-path
        name="external"
        path="."/>
    
    <external-cache-path
        name="external_cache"
        path="."/>
    
    <external-files-path
        name="external_file"
        path="."/>
</paths>